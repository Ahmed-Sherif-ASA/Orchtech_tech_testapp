<%= render 'errors', obj: @user%>
<div class='row'>
  <div class='col-md-12'>
    <%= form_with scope: :user, url: users_path, local: true do |i| %>
      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= i.label :email%> 
        </div>
        <div class="col-sm-10">
          <%= i.email_field :email, class:"form-control", placeholder: "Enter email"%>
        </div>
      </div>

      <div class='form-group'>
        <div class="control-label col-sm-2">
          <%= i.label :password%>
        </div>
        <div class="col-sm-10">
          <%= i.password_field :password, class:"form-control", placeholder: "Enter password"%>
        </div>
      </div>

      <div class='form-group'>
        <div class="col-sm-offset-2 col-sm-10">
          <%= i.submit("Verify", class: 'btn btn-primary btn-lg')%>
        </div>
      </div>
    <% end %>

  </div>
</div>

